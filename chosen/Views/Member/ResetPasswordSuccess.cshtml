@{
    ViewData["Title"] = "重設密碼成功";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="card-title text-center">重設密碼成功</h1>
                    <p class="card-text text-center">您的密碼已經被成功重設</p>
                    <div class="text-center">
                        <button class="btn btn-primary" onclick="closePage()">關閉該頁面</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function closePage() {
            window.close();
        }
    </script>
}

