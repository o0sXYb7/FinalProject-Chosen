@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

       
    <style>
    .fw-bolder {
        font-size: 43px !important;
    }
    </style>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-1">@Model.Title</h1>
                    <!-- Post meta content-->
                    <div class="text-muted fst-italic mb-2">@Model.Date</div>
                </header>
                <!-- Preview image figure-->
                <figure class="mb-4">
                    <img id="imgurl" />
                            <script>
                                var imageUrl = "https://finalprojectbackend.azurewebsites.net/BreakingNew/" + "@Model.ActivityUrl";

                                if (imageUrl) {
                                    var imgElement = document.getElementById('imgurl');
                                    imgElement.src = imageUrl;
                                }
                            </script>
                </figure>
                <!-- Post content-->
                <section class="mb-5">
                    <p class="fs-5 mb-4">
                        @Model.Description
                    </p>                              
                </section>
            </article>

        </div>
       
    </div>
</div>

 
